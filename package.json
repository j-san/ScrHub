{
  "name": "scrhub",
  "subdomain": "scrhub",
  "scripts": {
    "postinstall": "borrower install",
    "start": "nodemon --watch src --watch server.js",
    "test": "npm outdated --depth 0 && npm run jshint && npm run mocha",
    "mocha": "NODE_ENV=test istanbul cover _mocha && istanbul check-coverage --statements 60",
    "build": "borrower build",
    "jshint": "jshint src test"
  },
  "main": "server.js",
  "author": "Jonathan Sanchez Pando <me@jsan.me>",
  "repository": {
    "type": "git",
    "url": "http://github.com/j-san/ScrHub.git"
  },
  "version": "0.1.1",
  "engines": {
    "iojs": "1.5.x"
  },
  "dependencies": {
    "borrower": "^0.4.0",
    "bower": "^1.3.12",
    "dotenv": "^0.5.1",
    "koa": "^0.18.1",
    "koa-bodyparser": "^1.3.0",
    "koa-jade": "^0.3.1",
    "koa-logger": "^1.2.2",
    "koa-mongodb-session": "0.0.3",
    "koa-route": "^2.4.0",
    "koa-static": "^1.4.7",
    "mongoose": "^4.0.0-rc3",
    "nodemailer": "^1.3.1",
    "q": "^1.0.1",
    "request": "^2.48.0",
    "underscore": "^1.7.0",
    "winston": "^0.9.0"
  },
  "devDependencies": {
    "co-mocha": "latest",
    "co-supertest": "latest",
    "istanbul": "git://github.com/gotwarlost/istanbul.git#harmony",
    "jshint": "^2.6.3",
    "nock": "latest",
    "nodemon": "^1.3.7",
    "should": "latest",
    "sinon": "latest",
    "supertest": "latest"
  },
  "staticDependencies": {
    "jquery": "2.1.*",
    "bootstrap": "3.3.*",
    "backbone": "1.1.*",
    "underscore": "1.7.*"
  },
  "config": {
    "bower": {
      "cwd": "public",
      "baseUrl": "public"
    },
    "travis-cov": {
      "threshold": 60
    }
  },
  "jshintConfig": {
    "curly": true,
    "debug": true,
    "eqnull": true,
    "eqeqeq": true,
    "undef": true,
    "unused": true,
    "node": true,
    "devel": true,
    "esnext": true,
    "noyield": true,
    "maxcomplexity": 5,
    "globals": {
      "describe": true,
      "it": true,
      "before": true,
      "after": true,
      "beforeEach": true,
      "afterEach": true
    }
  }
}
